#:kivy 1.0
#:import ScrollEffect kivy.effects.scroll.ScrollEffect
#:import FadeTransition kivy.uix.screenmanager.FadeTransition

<Manager>:
    transition: FadeTransition()
    LoginScreen:
        name: 'loginscreen'
    CosmosHome:
        name: 'cosmosmenu'
    ResultPage:
        name: 'resultpage'
########################################################################################################################
<UserInput@TextInput>:
    size_hint: None, None
    size: 280, 40
    font_size: 20
    multiline: False
    background_color: .2, .2, .2, 1
    foreground_color: 1, 1, 1, 1
    background_normal: app.roundborder
    background_active: app.roundborder

<PopupWarning>
    size_hint: None, None
    size: 232, 200
    title: 'Login ou senha incorretos!'
    separator_color: 1, 0.3, 0.2, 1
    BoxLayout:
        orientation: 'vertical'
        Label:
            size_hint: 1, .7
            text: 'Desculpe, não encontramos uma conta com esse endereço de email. Tente novamente.\n'
            text_size: self.size
        Button:
            pos_hint: {'center_x': .5}
            size_hint: .5, .3
            text: 'Ok'
            on_press: root.dismiss()

<LoginScreen>:
    canvas:
        Color:
            rgba: 1, 1, 1, 0.5
        Rectangle:
            source: app.background_login
            size: self.size
            pos: self.pos
    BoxLayout:
        size_hint: 1, 0.12
        pos_hint: {'top': 1}
        Image:
            source: app.cosmos_logo
            pos_hint: {'center_y': .5}
            size_hint: None, None
            size: 170, 90
    BoxLayout:
        padding: self.width*0.3, self.height*0.12, self.width*0.3, self.height*0.12   #left, top, right, bottom
        FloatLayout:
            canvas:
                Color:
                    rgba: 0, 0, 0, 0.6
                Rectangle:
                    size: self.size
                    pos: self.pos
            Label:
                text: '      Bem-Vindo(a)'
                font_name: app.cosmos_font
                font_size: 45
                size_hint: None, None
                size: self.texture_size[0], 130
                pos_hint: {'x': 0.075, 'center_y': .85}
            UserInput:
                id: email
                pos_hint: {'center_x': 0.5, 'center_y': .6}
                focus: True
                hint_text: 'Email'
                write_tab: False
                on_text_validate: root.login_verification()
            UserInput:
                id: passw
                pos_hint: {'center_x': 0.5, 'center_y': .47}
                hint_text: 'Senha'
                password: True
                on_text: root.istab_pressed(self.text)
                on_text_validate: root.login_verification()
            Button:
                size_hint: None, None
                size: 280, 40
                pos_hint: {'center_x': 0.5, 'center_y': .28}
                background_color: .8235294117647059, .4117647058823529, .1176470588235294, 1
                background_normal: app.roundborder
                background_down: app.roundborder
                text: 'Entrar'
                bold: True
                on_press: root.login_verification()
            CheckBox:
                id: checkbox
                size_hint: None, None
                size: 25, 25
                pos_hint: {'center_x': 0.1, 'center_y': .19}
                canvas.before:
                    Color:
                        rgba: .3, .3, .3, 1
                    Rectangle:
                        size: self.size[0] - 10, self.size[1] - 10
                        pos: self.pos[0] + 5, self.pos[1] + 5
                color: 0, 0, 0, 1
            Label:
                size_hint: None, None
                size: self.texture_size
                pos_hint: {'center_x': 0.35, 'center_y': .19}
                text: 'Lembre-se de mim'
            Label:
				id: dica
                pos_hint: {'center_x': 0.5, 'center_y': .05}
########################################################################################################################
<CustomButton@Button>:
    size_hint: None, 1
    width: self.texture_size[0] + 20
    background_color: 0, 0, 0, 0
    on_press: print(self.text)
	
<ContentList>:
    orientation: 'vertical'
    size_hint: 1, None
    height: self.minimum_height
    Label:
        size_hint: None, None
        size: self.texture_size
        id: label
        bold: True
        font_size: 25
        color: .9, .9, .9, 1
    ScrollView:
        size_hint: 1, None 
        height: 150
        do_scroll: True, True
        effect_cls: ScrollEffect
		bar_color: 1, 1, 1, 0
		bar_inactive_color: 1, 1, 1, 0
        scroll_type: ['content']
        GridLayout:
            id: grid
            size_hint: None, None
            size: self.minimum_width, 151
            spacing: 7

<SearchBox>:
    Button:
        id: searchbtn
        size_hint: .08, .35
        pos_hint: {'center_y': .5, 'center_x': .9}
        background_normal: app.search_btn
        background_down: app.search_btn
        border: 0, 0, 0, 0

<MenuHeader@BoxLayout>:
	size_hint: 1, 0.12
	pos_hint: {'top': 1}
	canvas:
		Color:
			rgba: .15, .15, .15, .9
		Rectangle:
			size: self.size
			pos: self.pos
	Image:
		size_hint: None, 1.3
		width: 170
		pos_hint: {'center_y': .55}
		source: app.cosmos_logo
	CustomButton:
		text: 'Home'
		on_press: app.root.current = 'cosmosmenu'
        bold: True
	CustomButton:
		text: 'Livros'
        on_press: 
	CustomButton:
		text: 'Revistas e Artigos'
	CustomButton:
		text: 'Em alta'
    SearchBox
	
    FloatLayout:
	    size_hint: .3, 1
	    drop_menu: drop_menu.__self__
		# DropdownMenu
        Button:
            size_hint: .5, .55
            pos_hint: {'center_y': .5, 'center_x': .5}
            on_parent: drop_menu.dismiss()
            on_release: drop_menu.open(self)
            Image:
                source: app.dropmenu_icon
                x: self.parent.x
                y: self.parent.y
                size_hint: None, None
                size: 40, 40
        DropDown:
            id: drop_menu
            pos_hint: {'center_x': .86}
            auto_width: False
            width: 170
            on_select: print(args[1])
            Label:
                size_hint: 1, None
                height: self.texture_size[1]
                text: ' '*36 + '^'
                halign: 'left'
            BoxLayout:
                orientation: 'vertical'
                size_hint: None, None
                width: 170
                height: 200
                canvas.before:
                    Color:
                        rgba: 0, 0, 0, .8
                    Rectangle:
                        size: self.size
                        pos: self.pos
                BoxLayout:
                    orientation: 'vertical'
                    padding: 10, 10, 10, 10
                    BoxLayout:
                        Button:
                            size_hint: None, None
                            size: 37, 37
                            pos_hint: {'top': 1}
                            on_press: drop_menu.select('Usuário: ' + btn_user.text)
                            Image:
                                source: app.dropmenu_icon
                                x: self.parent.x
                                y: self.parent.y
                                size_hint: None, None
                                size: self.parent.size
                        Button:
                            id: btn_user
                            pos_hint: {'center_y': .6}
                            background_color: 0, 0, 0, 0
                            text: 'Usuario Cosmos'
                            on_press: drop_menu.select('Usuário: ' + self.text)
                    Button:
                        size_hint: 1, .5
                        background_color: 1, 1, 1, 0
                        text: 'GERENCIAR PERFIS'
                        on_press: drop_menu.select('Opção: ' + self.text)
                BoxLayout:
                    orientation: 'vertical'
                    padding: 10, 0, 10, 5
                    Button:
                        background_color: 1, 1, 1, 0
                        bold: True
                        text: 'Conta'
                        text_size: self.size
                        halign: 'left'
                        valign: 'center'
                        on_press: drop_menu.select('Opção: ' + self.text)
                    Button:
                        background_color: 1, 1, 1, 0
                        bold: True
                        text: 'Centro de Ajuda'
                        text_size: self.size
                        halign: 'left'
                        valign: 'center'
                        on_press: drop_menu.select('Opção: ' + self.text)
                    Button:
                        background_color: 1, 1, 1, 0
                        bold: True
                        text: 'Sair do Cosmos'
                        text_size: self.size
                        halign: 'left'
                        valign: 'center'
                        on_release:
                            drop_menu.dismiss()
                            app.root.current = 'loginscreen'
                            app.root.get_screen('loginscreen').ids.email.focus = True
        # End of the DropDown Menu

<Banner>:
    size_hint: 1.056, None
    height: 450
    pos_hint: {'center_x': .5}
    FloatLayout:
        pos: self.parent.pos
        Image:
            source: app.banner
            size_hint:[1, None]
            height: 550
            pos_hint: {'top': 1}
            allow_stretch:True
            keep_ratio:False
        Label:
            text: ' A revolução \n        dos\n     Bichos'
            font_name: app.cosmos_font
            bold: True
            font_size: 50
            pos_hint: {'center_y': .7, 'center_x': .15}
            color: 1, 1, 1, 1
        Button:
            size_hint: None, None
            size: 140, 50
            pos_hint: {'center_y': .43, 'center_x': .12}
            text: str(chr(187)) + ' Ler'
            bold: True
            color: 1, 1, 1, 1
            background_color: 0, 0, 0, .4
            background_normal: app.roundborder
            on_release: print(self.text + ' botão')
        Button:
            size_hint: None, None
            size: 140, 50
            pos_hint: {'center_y': .43, 'center_x': .3}
            text: '+ Informações'
            bold: True
            color: 1, 1, 1, 1
            background_color: 0, 0, 0, .4
            background_normal: app.roundborder
            on_release: print(self.text + ' botão')
        Label:
            text:
                '''
                'A Revolução dos Bichos, de George Orwell, se passa numa granja liderada,  
                'inicialmente, pelo Sr. Jones. Porém, insatisfeitos com a dominação e exploração e 
                'liderados pelo Porco Major, os animais decidem fazer uma revolução.  
                'Assim, o inimigo seria aquele que anda sobre duas pernas.
                '''.replace("'", '')
            font_name: app.cosmos_font
            size: self.size
            bold: True
            font_size: 17
            color: 1, 1, 1, 1
            pos_hint: {'center_y': .22, 'center_x': .3}

<CosmosHome>:
    FloatLayout:
        ScrollView:
            id: scroll_home
            size_hint: 1, 0.88
            pos_hint: {'center_y': .44}
            bar_width: 10
            scroll_wheel_distance: 40
            scroll_type: ['bars', 'content']
            effect_cls: ScrollEffect
            BoxLayout:
                id: content
                orientation: 'vertical'
                size_hint: 1, None
                height: self.minimum_height
                padding: 22, 0, 22, 10
                canvas:
                    Color:
                        rgba: .15, .15, .15, .9
                    Rectangle:
                        size: self.size
                        pos: self.pos
        MenuHeader
########################################################################################################################
<ResultPage>
    FloatLayout:
        canvas.before:
            Color:
                rgba: .15, .15, .15, .9
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            id: searchtext
            font_size: 28
            size_hint: None, None
            size: self.texture_size
            pos_hint: {'center_y': .83}
        ScrollView:
            id: scroll_result
            size_hint: 1, 0.88
            pos_hint: {'center_y': .35}
            bar_width: 10
            scroll_wheel_distance: 40
            scroll_type: ['bars', 'content']
            effect_cls: ScrollEffect
            StackLayout:
                id: stack
                spacing: 10
                padding: 30, 0, 22, 50
                size_hint: 1, None
                height: self.minimum_height + 30
                pos_hint: {'center_y': .35}
        MenuHeader